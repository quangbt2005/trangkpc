/*********************************************************************/
/*    関数名 ： P_Cnv_Kaigyo                                         */
/*-------------------------------------------------------------------*/
/*      機能 ： 改行コード( 0x0d, 0x0a ) ⇔ "<BR>"変換               */
/*-------------------------------------------------------------------*/
/*      引数 ： $In   (i)    改行コード変換対象文字列                */
/*           ： $Type (i)    変換タイプ                              */
/*           ： "1"    ( 0x0d, 0x0a ) → <BR>                        */
/*           ： "2"    "<BR>"         → ( 0x0d, 0x0a )              */
/*           ： "11"   ( 0x0a )       → <BR>                        */
/*           ： "111"  ( 0x0d )       → <BR>                        */
/*           ： "22"   "<BR>"         → ( 0x0a )                    */
/*           ： "222"  "<BR>"         → ( 0x0d )                    */
/*-------------------------------------------------------------------*/
/*    戻り値 ： 改行コード変換後文字列                               */
/*-------------------------------------------------------------------*/
/* Copyright ： DNP DigitalCom CO.,LTD.                              */
/*      P001 ： 新規  2004.01.01  桝形                               */
/*********************************************************************/
function P_Cnv_Kaigyo( $In, $Type )
{
 $Code1 = chr( 13 ).chr( 10 );
 $Code2 = chr( 13 );
 $Code3 = chr( 10 );

 switch( $Type )
 {
  case "1"   : {
                return str_replace(   $Code1,  "<BR>", $In );
                break;
               }
  case "11"  : {
                return str_replace(   $Code3,  "<BR>", $In );
                break;
               }
  case "111" : {
                return str_replace(   $Code2,  "<BR>", $In );
                break;
               }
  case "22"  : {
                return eregi_replace( "<BR>", $Code3,  $In );
                break;
               }
  case "222" : {
                return eregi_replace( "<BR>", $Code2,  $In );
                break;
               }
  default    : {
                return eregi_replace( "<BR>", $Code1,  $In );
                break;
               }
 }
}

