/*********************************************************************/
function Positive_Int_Check( $value )
{
  if( isset( $value ) == FALSE ) return FALSE;
  if( is_numeric( $value ) == FALSE ) return FALSE;
  if( is_int( $value + 0 ) == FALSE ) return FALSE;
  return $value >= 0;
}
