function P_SJIS_DecodeCode_Flush( $Str )
{
 $Internal = mb_internal_encoding( );
 $OutPut   = mb_http_output( );

 $Change = WWW_Config_isConvert( $OutPut );

 while( @ob_end_flush( ) ){ }

 if( mb_strlen( $Change ) > 0 )
   {
    $Str = mb_convert_encoding( $Str, $OutPut, $Internal );
    echo P_SJIS_DecodeCode( $Str, $Change );
   }
   else
   { echo P_SJIS_DecodeCode( $Str ); }

 if( mb_strlen( $Change ) <= 0 || mb_strtoupper( $OutPut ) == "PASS" )
   { return; }

 @ob_start( "mb_output_handler" );
}

